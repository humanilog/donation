<?xml version="1.0"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="view_company_form">
            <field name="name">res.company.donation.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Non-Profit Details">
                      <group>
                        <field name="responsible_tax_authority"/>
                        <field name="current_certificate_of_tax_exemption"/>
                        <field name="non_profit_purpose"/>
                      </group>
                    </page>
                </notebook>
            </field>            
      </record>
    </data>
</openerp>
