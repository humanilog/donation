<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_form">
            <field name="name">res.company.donation.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                  <page name="nonprofit_details" string="Non-Profit Details">
                      <group>
                        <field name="donation_eligibility_purpose"/>
                      </group>
                    </page>
                </notebook>
            </field>            
      </record>
    </data>
</odoo>
